<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_holder"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:orientation="vertical"
    android:padding="@dimen/ten_dp">

    <LinearLayout
        android:id="@+id/item_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shadow_white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/job_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/ten_dp"
            android:drawableLeft="@drawable/ic_bag"
            android:drawablePadding="@dimen/ten_dp"
            android:drawableRight="@drawable/ic_arow_right"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/five_dp"
            android:paddingLeft="@dimen/ten_dp"
            android:paddingRight="@dimen/five_dp"
            android:paddingTop="@dimen/five_dp"
            android:textColor="@color/blue_text" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/point_five_dp"
            android:background="@color/hint_color" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/job_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/five_dp"
                android:layout_marginLeft="@dimen/ten_dp"
                android:layout_marginTop="@dimen/five_dp"
                android:src="@drawable/ic_on_site" />

            <TextView
                android:id="@+id/job_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="@dimen/five_dp"
                android:layout_toRightOf="@+id/job_icon"
                android:drawablePadding="@dimen/ten_dp"
                android:gravity="center_vertical"
                android:paddingBottom="@dimen/five_dp"
                android:paddingLeft="@dimen/ten_dp"
                android:paddingTop="@dimen/five_dp"
                android:textColor="@color/text_gray" />
        </RelativeLayout>

        <TextView
            android:id="@+id/job_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/five_dp"
            android:drawableLeft="@drawable/ic_time"
            android:drawablePadding="@dimen/ten_dp"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/five_dp"
            android:paddingLeft="@dimen/ten_dp"
            android:paddingTop="@dimen/five_dp"
            android:textColor="@color/text_gray" />

        <TextView
            android:id="@+id/material_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/five_dp"
            android:drawableLeft="@drawable/ic_material_icon"
            android:drawablePadding="@dimen/ten_dp"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/five_dp"
            android:paddingLeft="@dimen/ten_dp"
            android:paddingTop="@dimen/five_dp"
            android:textColor="@color/text_gray" />

        <TextView
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/five_dp"
            android:drawableLeft="@drawable/ic_map_icon"
            android:drawablePadding="@dimen/ten_dp"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/five_dp"
            android:paddingLeft="@dimen/ten_dp"
            android:paddingTop="@dimen/five_dp"
            android:textColor="@color/text_gray" />

        <TextView
            android:id="@+id/trailer_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/five_dp"
            android:drawableLeft="@drawable/ic_truck_icon"
            android:drawablePadding="@dimen/ten_dp"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/five_dp"
            android:paddingLeft="@dimen/ten_dp"
            android:paddingTop="@dimen/five_dp"
            android:textColor="@color/text_gray" />
    </LinearLayout>
</LinearLayout>